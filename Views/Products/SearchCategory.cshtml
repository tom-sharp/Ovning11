@model SearchCategoryViewModel
@{
	ViewData["Title"] = "Search";
}


<h1>Product Search</h1>

<form>
	<select name="category">
		<option value="All">All categories</option>
		@foreach (var item in Model.Categories)
		{
			<option asp-value="item.Name">@item.Name</option>
		}
	</select>
	<input type="text" placeholder="Enter product" name="product"/><input type="submit" value="Search" />
</form>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => Model.SearchResult.FirstOrDefault().Category)
			</th>
			<th>
				@Html.DisplayNameFor(model => Model.SearchResult.FirstOrDefault().Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => Model.SearchResult.FirstOrDefault().Shelf)
			</th>
			<th>
				@Html.DisplayNameFor(model => Model.SearchResult.FirstOrDefault().Price)
			</th>
			<th>
				@Html.DisplayNameFor(model => Model.SearchResult.FirstOrDefault().Count)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.SearchResult)
		{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Category)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Shelf)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Price)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Count)
			</td>
		</tr>
		}
	</tbody>
</table>
